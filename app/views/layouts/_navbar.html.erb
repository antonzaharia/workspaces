<div data-controller="navbar">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        Workspaces
      </a>
      <div class="d-flex flex-nowrap">
        <% if user_signed_in? %>
          
          <div class="nav-item dropdown">
            <div data-action="click->navbar#toggleDropdown" class="account-avatar">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/avatar-5.webp" alt="avatar"
                class="img-fluid rounded-circle me-3" width="35">
            </div>
            <div data-navbar-target="dropdown" class="dropdown-menu" style="right: 0; left: auto;">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
              <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </div>

        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary me-1' %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-light' %>
        <% end %>
      </div>
    </div>
  </nav>
</div>