<div id="new-workspace">
  <div class="mx-auto my-10 rounded-lg shadow p-10 max-w-lg border-gray-600 border-solid border">
    <h1 class="text-center text-2xl mb-5">Send invite</h4>
    <%= form_with(model: workspace_user, class: "contents") do |form| %>
      <div class="my-5">
        <%= form.label :email, class: 'input-group' do %>
          <span class="border border-gray-700">Email</span>
          <input class="input input-bordered" placeholder="user@site.com" type="email" name="workspace_user[email]" id="workspace_user_email">
        <% end %>
      </div>

      <% if workspace_user.errors.any? %>
        <% workspace_user.errors.each do |error| %>
          <li class="alert alert-warning shadow-lg">
            <div class="text-black">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
              <span class="text-black"><%= error.full_message %></span>
            </div>
          </li>
        <% end %>
      <% end %>

      <div class="mt-5">
        <%= form.submit 'Send', class: "btn w-full btn-secondary" %>
      </div>
    <% end %>
    <%= link_to 'Cancel', workspace_home_path, class: "mt-3 btn w-full btn-ghost" %>
  </div>
</div>