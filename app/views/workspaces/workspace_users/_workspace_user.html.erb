<div id="<%= dom_id workspace_user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= workspace_user.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Workspace:</strong>
    <%= workspace_user.workspace_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this workspace user", workspace_user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this workspace user', edit_workspace_user_path(workspace_user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
