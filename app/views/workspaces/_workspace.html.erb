<%= link_to workspace.url(request), class: 'flex justify-between items-center m-6 p-6 block rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:bg-gray-100 hover:bg-gray-700' do %>
  <div>
    <h5 class="whitespace-nowrap text-ellipsis overflow-hidden mb-2 text-2xl font-bold tracking-tight text-white"><%= workspace.name %></h5>
    <p class="font-normal text-gray-400"><%= workspace.workspace_users.size %> members</p>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
    <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
<% end %>
<%= link_to 'Delete', workspace_delete_path(workspace), data: { turbo_frame: 'turbo-modal' }, class: 'btn btn-error btn-xs btn-outline' %>