<div id="new-workspace">
  <div class="mx-auto my-10 rounded-lg shadow p-10 max-w-lg border-gray-600 border-solid border">
    <h1 class="text-center text-2xl">New workspace</h4>
    <%= form_with(model: workspace) do |form| %>
      <div class="w-full mt-5">
        <%= form.label :name, 'Workspace name', class: 'label-text' %>
        <%= form.text_field :name, class: 'input input-bordered input-primary w-full', placeholder: 'Your company name' %>
      </div>
      
      <div class="w-full mt-5">
        <%= form.label :slug, 'Slug', class: 'label-text' %>
        <label class="input-group">
          <%= form.text_field :slug, class: 'input input-bordered input-primary w-full', placeholder: 'your-slug', required: true %>
          <span class="border border-gray-600">.<%= request.host %></span>
        </label>
      </div>

      <% if workspace.errors.any? %>
        <% workspace.errors.each do |error| %>
          <div class="alert alert-warning shadow-lg my-1">
            <div class="text-black">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
              <span class="text-black"><%= error.full_message %></span>
            </div>
          </div>
        <% end %>
      <% end %>

      <div class="w-100 d-flex justify-content-end mt-5">
        <%= form.submit 'Create', class: 'btn w-full btn-secondary' %>
      </div>
    <% end %>
    <%= link_to 'Cancel', dashboard_path, class: 'mt-3 btn w-full btn-ghost' %>
  </div>
</div>


