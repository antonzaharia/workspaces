<div class="my-5" id="profile-page">
  <h1 class="">Profile</h1>

  <%= form_for @user, url: update_profile_icon_path(@user) do |f| %>
    <div data-controller="profile-pic">
      <div class="icon-field">
        <label for="uploaded-pic">
          Your profile picture
          <div>
            <% if current_user.icon.attached? %>
              <%= image_tag current_user.icon, class: 'profile-pic', id: 'pic-preview' %>
            <% else %>
              <%= image_tag 'blank_profile', class: 'profile-pic', id: 'pic-preview' %>
            <% end %>
          </div>
          <div class="d-flex">
            <%= f.file_field :icon, autofocus: true, class: 'form-control my-3', id: 'uploaded-pic' %>
            <%= f.button 'Save', class: 'btn btn-primary m-3 hidden', id: 'save-button' %>
          </div>
        </label>
      </div>
    </div>
  <% end %>

  <% frame_id = dom_id(@user, 'details_turbo_frame')%>
  <%= form_for @user, url: update_profile_path(@user), data: { turbo_frame: frame_id } do |f| %>
    <%= turbo_frame_tag frame_id do %>
      <div class="card">
        <div class="card-header">
          Personal details
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Name: </h6></div>
                <div class="col">
                  <p class="card-text"><%= @user.show_name %></p>
                </div>
              </div>
            </li>

            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Date of birth: </h6></div>
                <div class="col">
                  <p class="card-text"><%= @user.show_dob %></p>
                </div>
              </div>
            </li>

            <div class="mt-3">
              <%= link_to 'Edit details', edit_profile_path(@user), class: 'btn btn-primary' %>
            </div>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>

  <% frame_id = dom_id(@user, 'secure_turbo_frame') %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= turbo_frame_tag frame_id do %>
      <div class="card mt-5">
        <div class="card-header">
          Secured details
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">

            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Email: </h6></div>
                <div class="col">
                  <p class="card-text"><%= @user.email %></p>
                </div>
              </div>
            </li>

            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Password: </h6></div>
                <div class="col">
                  <p class="card-text">***</p>
                </div>
              </div>
            </li>

            <div class="mt-3">
              <%= link_to 'Edit secured details', edit_profile_path(@user), class: 'btn btn-primary' %>
            </div>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="alert alert-dismissible alert-danger mt-5 d-flex justify-content-center">
    <p class="text-center">
      <%= t('.unhappy') %>? 
      <%= turbo_frame_tag 'modal' do %>
        <div data-controller="turbo-modal">
          <%= link_to 'Delete your account', profile_delete_path(@user), data: { turbo_frame: 'modal' }, class: "button is-danger" %>
        </div>
      <% end %>
    </p>
  <div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>