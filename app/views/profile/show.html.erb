<div class="my-5" id="profile-page">
  <h1 class="">Profile</h1>

  <%= form_for @user, url: update_profile_icon_path(@user) do |f| %>
    <div data-controller="profile-pic">
      <div class="icon-field">
        <label for="uploaded-pic">
          Your profile picture
          <div>
            <% if current_user.icon.attached? %>
              <%= image_tag current_user.icon, class: 'profile-pic', id: 'pic-preview' %>
            <% else %>
              <%= image_tag 'blank_profile', class: 'profile-pic', id: 'pic-preview' %>
            <% end %>
          </div>
          <div class="d-flex">
            <%= f.file_field :icon, autofocus: true, class: 'form-control my-3', id: 'uploaded-pic' %>
            <%= f.button 'Save', class: 'btn btn-primary m-3 hidden', id: 'save-button' %>
          </div>
          
        </label>
      </div>
    </div>
  <% end %>

  <% frame_id = dom_id(@user, 'details_turbo_frame')%>
  <%= form_for @user, url: update_profile_path(@user), data: { turbo_frame: frame_id } do |f| %>
    <%= turbo_frame_tag frame_id do %>
      <div class="card">
        <div class="card-header">
          Personal details
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">  
            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Name: </h6></div>
                <div class="col">
                  <p class="card-text"><%= @user.show_name %></p>
                </div>
              </div>
            </li>

            <li class="list-group-item">
              <div class="row">
                <div class="col"><h6 class="card-title">Date of birth: </h6></div>
                <div class="col">
                  <p class="card-text"><%= @user.show_dob %></p>
                </div>
              </div>
            </li>

            <div class="mt-3">
              <%= link_to 'Edit details', edit_profile_path(@user), class: 'btn btn-primary' %>
            </div>
          </ul>
        </div>
        
      </div>
    <% end %>
  <% end %>
  

  <div><%= @user.email %></div>
  
</div>