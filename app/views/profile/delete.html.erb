<%= turbo_frame_tag "turbo-modal", target: "_top" do %>
  <div data-controller="turbo-modal"  data-action="turbo:submit-end->turbo-modal#hide">

    <label data-turbo-modal-target="modal" data-action="click->turbo-modal#hide" class="modal cursor-pointer">
      <label class="modal-box relative">
        <h3 class="text-lg font-bold">Are you sure?</h3>
        <p class="py-4">You are about to permanently delete your account.</p>
        <div class="modal-action">
          <%= button_to 'Confirm', registration_path(resource_name), data: { turbo: false }, method: :delete %>
          <%= link_to 'Cancel', profile_url(current_user), data: { action: 'click->turbo-modal#hide' } %>
        </div>
      </label>
    </label>

  </div>
<% end %>
