<%= turbo_frame_tag "turbo-modal" do %>
  <div data-controller="turbo-modal"  data-action="turbo:submit-end->turbo-modal#cancel">

    <div data-turbo-modal-target="modal" data-action="click->turbo-modal#hide" class="modal">
      <div class="modal-box relative">
        <h3 class="text-lg font-bold">Are you sure?</h3>
        <p class="py-4">You are about to permanently delete your account.</p>
        <div class="modal-action">
          <%= button_to 'Confirm', registration_path(resource_name), data: { turbo: false }, method: :delete %>
          <%= button_tag 'Cancel', data: { action: 'click->turbo-modal#cancel' } %>
        </div>
      </div>
    </div>

  </div>
<% end %>
