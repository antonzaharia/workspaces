<%= turbo_frame_tag "modal", target: "_top", class: 'modal-dialog modal-dialog-centered' do %>
  
  <div data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#closeModal">
    <div data-turbo-modal-target="modal">
      <div class="modal-background" data-action="click->turbo-modal#closeModal"></div>
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <h3 class="modal-title">Are you sure?</h2>
          <div class="modal-body">
            <p>You are about to permanetly delete your account.</p>
          </div>

          <div class="modal-footer">
            <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { turbo: false }, class: 'btn btn-danger mx-3', method: :delete %>
            <%= link_to "Cancel", dashboard_path, data: { action: 'click->turbo-modal#closeModal' }, class: "button is-warning" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>