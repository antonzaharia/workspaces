<%= form_for @user, url: update_profile_path(@user) do |f| %>

  <% frame_id = dom_id(@user, 'details_turbo_frame')%>
  <%= turbo_frame_tag frame_id do %>
    <div class="card">
      <div class="card-header">
        Personal details
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">Name: </h6></div>
              <div class="col">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', style: "min-width: 170px;" %>
              </div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">Date of birth: </h6></div>
              <div class="col">
                <%= f.date_field :dob, class: 'form-control', style: "min-width: 170px;" %>
              </div>
            </div>
          </li>

          <div class="mt-3">
            <%= f.button 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', profile_path(@user), class: 'btn' %>
          </div>
        </ul>
      </div>
    </div>
  <% end %>

  <% frame_id = dom_id(@user, 'secure_turbo_frame')%>
  <%= turbo_frame_tag frame_id do %>
    <div class="card">
      <div class="card-header">
        Personal details
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">

          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">Email: </h6></div>
              <div class="col">
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
              </div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">New password: </h6></div>
              <div class="col">
                <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
                <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
              </div>
            </div>
          </li>

          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">Confirm new password: </h6></div>
              <div class="col">
                <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
                <small class="form-text text-muted"><%= t('.password_confirmation') %></small>
              </div>
            </div>
          </li>
          
          <li class="list-group-item">
            <div class="row">
              <div class="col"><h6 class="card-title">Old password: </h6></div>
              <div class="col">
                <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
                <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
              </div>
            </div>
          </li>

          <div class="mt-3">
            <%= f.button 'Save', class: 'btn btn-primary' %>
            <%= link_to 'Cancel', profile_path(@user), class: 'btn' %>
          </div>
        </ul>
      </div>
    </div>
  <% end %>

<% end %>